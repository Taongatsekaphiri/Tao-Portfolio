<%- include('partials/header', { 
    page: 'about', 
    pageStyles: '<link rel="stylesheet" href="/css/style.css"><link rel="stylesheet" href="/css/about.css">' 
}) %>

<section class="about-container" data-reveal="up">

    <!-- Left Column: Profile Image and CV Button -->
    <div class="about-left">
        <img src="<%= about.profile_pic %>" alt="Taonga Tseka Phiri" class="profile-img">
        <% if(about.cv_link) { %>
            <a href="<%= about.cv_link %>" download class="cv-btn">
                Download CV
            </a>
        <% } %>
    </div>

    <!-- Right Column: Introduction & Additional Content -->
    <div class="about-right">
        <% if(about.content) { %>
            <p><%= about.content %></p>
        <% } %>

        <% if(about.additional_content) { %>
            <div class="additional-content">
                <%= about.additional_content %>
            </div>
        <% } %>
<h2><i class="fas fa-laptop-code"></i> Skills</h2>
<ul class="skills">
  <% about.skills.forEach(skill => { %>
    <li><%= skill %></li>
  <% }) %>
</ul>

</div>
</section>
