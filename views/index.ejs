<!-- Fade-in/out Text Script -->
<script>
const lines = [
    "ðŸ’» A Digital Dreamweaver and Pixel Princess who believes technology should be as beautiful as it is powerful.",
    "I craft innovative web applications and manage databases.",
    "I transform ideas into functional digital experiences ðŸŒ¸."
];

let index = 0;
const typedEl = document.getElementById('typed-text');

function showLine() {
    typedEl.style.opacity = 0; // hide
    setTimeout(() => {
        typedEl.innerText = lines[index];
        typedEl.style.opacity = 1; // fade in
        index = (index + 1) % lines.length; // next line
        setTimeout(showLine, 3000); // show next after 3s
    }, 500); // fade-out duration
}

// start animation
showLine();
</script>
